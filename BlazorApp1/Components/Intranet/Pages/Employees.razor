@page "/intranet/employees"

<PageTitle>Employees</PageTitle>

<h1 class="mb-4">Employees</h1>

<!-- Table of Employees -->
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Position</th>
            <th scope="col">Department</th>
            <th scope="col">Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in employees)
        {
            <tr>
                <th scope="row">@employee.Id</th>
                <td>@employee.Name</td>
                <td>@employee.Position</td>
                <td>@employee.Department</td>
                <td>@employee.Email</td>
            </tr>
        }
    </tbody>
</table>

@code {
    private List<Employee> employees = new List<Employee>
    {
        new Employee { Id = 1, Name = "John Doe", Position = "Software Engineer", Department = "IT", Email = "john.doe@example.com" },
        new Employee { Id = 2, Name = "Jane Smith", Position = "Project Manager", Department = "Operations", Email = "jane.smith@example.com" },
        new Employee { Id = 3, Name = "Michael Johnson", Position = "UX Designer", Department = "Design", Email = "michael.johnson@example.com" },
        new Employee { Id = 4, Name = "Emily Davis", Position = "Data Analyst", Department = "Analytics", Email = "emily.davis@example.com" },
        new Employee { Id = 5, Name = "William Brown", Position = "HR Specialist", Department = "Human Resources", Email = "william.brown@example.com" }
    };

    public class Employee
    {
        public int Id { get; set; }
        public string Name { get; set; } = string.Empty;
        public string Position { get; set; } = string.Empty;
        public string Department { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
    }
}