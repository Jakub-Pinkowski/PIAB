@page "/customer/about"

<PageTitle>About</PageTitle>

<h1 class="mb-4 text-center">About</h1>

<div class="container mt-5">
    <p class="lead text-center">Welcome to our store! We specialize in selling high-quality bikes, caps, shoes, and backpacks. Our mission is to provide the best products and services to our customers.</p>

    <div class="row mt-5">
        @foreach (var item in items)
        {
            <div class="col-md-6 mb-4">
                <div class="card mb-4 shadow-sm h-100">
                    <div class="card-body">
                        <h2 class="card-title">@item.Title</h2>
                        <p class="card-text">@item.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private List<Item> items = new List<Item>
    {
        new Item { Title = "Bikes", Description = "We offer a wide range of bikes for all types of riders. Whether you're a professional cyclist or a casual rider, we have the perfect bike for you. Our bikes are built with the highest quality materials and the latest technology to ensure a smooth and enjoyable ride." },
        new Item { Title = "Caps", Description = "Our collection of caps includes various styles and designs to suit your taste. Stay stylish and protected from the sun with our high-quality caps. From sporty to casual, we have caps for every occasion." },
        new Item { Title = "Shoes", Description = "Discover our range of shoes designed for comfort and performance. From running shoes to casual footwear, we have something for everyone. Our shoes are made with premium materials to provide the best support and durability." },
        new Item { Title = "Backpacks", Description = "Our backpacks are perfect for all your adventures. With various sizes and designs, you'll find the ideal backpack for your needs. Whether you're hiking, traveling, or commuting, our backpacks offer the perfect blend of style and functionality." }
    };

    public class Item
    {
        public string Title { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
    }
}

<style>
    .h-100 {
        height: 100%;
    }
</style>