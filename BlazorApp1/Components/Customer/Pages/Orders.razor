@page "/intranet/orders"

<PageTitle>Orders</PageTitle>

<h1 class="mb-4">Orders</h1>

<!-- Table of Orders -->
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Customer Name</th>
            <th scope="col">Order Date</th>
            <th scope="col">Total Amount</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in orders)
        {
            <tr>
                <th scope="row">@order.Id</th>
                <td>@order.CustomerName</td>
                <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>@order.Status</td>
            </tr>
        }
    </tbody>
</table>

@code {
    private List<Order> orders = new List<Order>
    {
        new Order { Id = 1, CustomerName = "John Doe", OrderDate = DateTime.Now.AddDays(-2), TotalAmount = 150.00m, Status = "Shipped" },
        new Order { Id = 2, CustomerName = "Jane Smith", OrderDate = DateTime.Now.AddDays(-1), TotalAmount = 200.00m, Status = "Processing" },
        new Order { Id = 3, CustomerName = "Michael Johnson", OrderDate = DateTime.Now, TotalAmount = 300.00m, Status = "Pending" },
        new Order { Id = 4, CustomerName = "Emily Davis", OrderDate = DateTime.Now.AddDays(-3), TotalAmount = 250.00m, Status = "Delivered" },
        new Order { Id = 5, CustomerName = "William Brown", OrderDate = DateTime.Now.AddDays(-4), TotalAmount = 100.00m, Status = "Cancelled" }
    };

    public class Order
    {
        public int Id { get; set; }
        public string CustomerName { get; set; } = string.Empty;
        public DateTime OrderDate { get; set; }
        public decimal TotalAmount { get; set; }
        public string Status { get; set; } = string.Empty;
    }
}