@page "/customer"

<PageTitle>Customer Home</PageTitle>

<h1 class="mb-4 text-center">Customer Portal</h1>

<p class="mb-4 text-center">Welcome to our customer portal. Here you can find all the information and services you need.
</p>

<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Shop</h5>
                    <p class="card-text">Browse our products and make purchases.</p>
                    <a href="customer/shop" class="btn btn-primary">Go to Shop</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Reviews</h5>
                    <p class="card-text">Read reviews from other customers.</p>
                    <a href="customer/customerreviews" class="btn btn-primary">Go to Reviews</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Categories</h5>
                    <p class="card-text">Explore our product categories.</p>
                    <a href="customer/customercategories" class="btn btn-primary">Go to Categories</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Suppliers</h5>
                    <p class="card-text">Learn about our suppliers.</p>
                    <a href="customer/customersuppliers" class="btn btn-primary">Go to Suppliers</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">FAQ</h5>
                    <p class="card-text">Find answers to frequently asked questions.</p>
                    <a href="customer/faq" class="btn btn-primary">Go to FAQ</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Contact Us</h5>
                    <p class="card-text">Get in touch with our support team.</p>
                    <a href="customer/contact" class="btn btn-primary">Contact Us</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">About Us</h5>
                    <p class="card-text">Learn more about our company and values.</p>
                    <a href="customer/about" class="btn btn-primary">About Us</a>
                </div>
            </div>
        </div>
    </div>
</div>